<li class="single">
    <div class="single-box-img">
        <img class="single__img" src="https://image.tmdb.org/t/p/w500/{{poster_path}}" alt="{{original_title}}">
    </div>
    <div class="single-content">
        <h3 class="single__header">{{title}}</h3>
        <div class="single__info">
            <div class="single__info-keys single__box">
                <span class="single__key single__info-box">Vote / Votes</span>
                <span class="single__key single__info-box">Popularity</span>
                <span class="single__key single__info-box">Original Title</span>
                <span class="single__key single__info-box">Genre</span>
            </div>
            <div class="single__info-values single__box">
                <span class="single__value single__info-box"><span class="vote vote-box">{{vote_average}} </span> /
                    <span class="votes vote-box">{{vote_count}}</span></span>
                <span class="single__value single__info-box">{{popularity}}</span>
                <span class="single__value single__info-box text-upper">{{title}}</span>
                <span class="single__value single__info-box">
                    {{#each genres}}
                    <span>{{this.name}}</span>
                    {{/each}}
                </span>
            </div>
        </div>
        <div class="single-content__inner">
            <h4 class="single-content__title">About </h4>
            <p class="single-content__text">{{overview}}</p>
        </div>

        <button class="single__btn watched">add to Watched</button>
        <button class="single__btn">add to queue</button>
    </div>
</li>